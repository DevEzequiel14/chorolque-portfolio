---
import Layout from "../../components/layout/Layout.astro";
import { information } from "../../data/profileInfo";
import ContactCard from "../../components/cards/ContactCard.astro";
import DetailsAboutCard from "../../components/about/DetailsAboutCard.astro";
import ExperienceCard from "../../components/about/ExperienceCard.astro";
import EducationCard from "../../components/about/EducationCard.astro";
import CarouselCard from "../../components/common/Carousel.astro";
import TextSlider from "../../components/common/TextSlider.astro";

const about = information;
const images = [
    "../../../src/assets/hobbies/hobby_1.webp",
    "../../../src/assets/hobbies/hobby_2.webp",
];
---

<Layout title="About | Ezequiel Chorolque">
    <div class="container animate-slide-up">
        <div class="button-exit">
            <a href="/">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-x"
                    ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                    ></path><path d="M18 6l-12 12"></path><path d="M6 6l12 12"
                    ></path></svg
                >
            </a>
        </div>
        <div class="grid">
            <div class="about">
                <DetailsAboutCard />
            </div>
            <div class="strengths">
                <TextSlider items={about.strengths} />
            </div>
            <div class="experience">
                <ExperienceCard />
            </div>
            <div class="education">
                <EducationCard />
            </div>
            <div class="hobbies">
                <CarouselCard images={images} />
            </div>
            <div class="contact">
                <ContactCard />
            </div>
        </div>
    </div>
</Layout>

<style>
    .container {
        display: flex;
        flex-flow: column;
        align-items: center;
        justify-content: space-evenly;
        min-height: 100vh;
        padding: 64px 25px 64px 25px;
        gap: 96px;
        position: relative;
        overflow: hidden;
        outline: 2px solid var(--border-color);
        outline-offset: -16px;
        border-radius: 3.5rem;
    }

    .button-exit {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        border: 1px solid var(--border-color);
        cursor: pointer;
        transition: background-color 0.3s ease;
        color: var(--text-color);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .grid {
        display: grid;
        grid-template-rows: repeat(3, minmax(240px, auto));
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        max-width: 1200px;
    }

    .about {
        grid-row: 1/ 3;
        grid-column: 1 / 3;
        border: 2px solid var(--border-color);
        padding: 2rem;
        border-radius: 2rem;
    }

    .experience {
        grid-row: 3;
        grid-column: 1 / 3;
        border: 2px solid var(--border-color);
        padding: 2rem;
        border-radius: 2rem;
    }

    .education {
        grid-row: 2;
        grid-column: 3 / 5;
        border: 2px solid var(--border-color);
        padding: 2rem;
        border-radius: 2rem;
    }

    .strengths {
        grid-row: 1;
        grid-column: 3 / 5;
        border: 2px solid var(--border-color);
        border-radius: 2rem;
        height: 100%;
        padding: 2rem;
        width: 100%;
        max-width: 100%;
    }

    .hobbies {
        grid-row: 3;
        grid-column: 3/4;
        border: 2px solid var(--border-color);
        border-radius: 2rem;
        height: 100%;
    }

    .contact {
        grid-row: 3;
        grid-column: 4/5;
        border: 2px solid var(--border-color);
        padding: 2rem;
        border-radius: 2rem;
        display: flex;
    }
</style>
