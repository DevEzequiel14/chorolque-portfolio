---
import { projects } from "../../data/projects";
const totalProjects = projects.length;
---

<div class="projects-card" data-total={totalProjects}>
    {
        projects.map((_, index) => (
            <input
                class="projects-card__input"
                type="radio"
                name="project"
                id={`project_${index + 1}`}
                checked={index === 0}
            />
        ))
    }

    <div class="projects-card__content">
        <div class="projects-card__title-container">
            {
                projects.map((project, index) => (
                    <h2 class="projects-card__title" data-index={index + 1}>
                        {project.title}
                    </h2>
                ))
            }
        </div>
        <div class="projects-card__image-container">
            {
                projects.map((project, index) => (
                    <img
                        class="projects-card__image"
                        src={project.image}
                        alt={project.title}
                        data-index={index + 1}
                    />
                ))
            }
        </div>

        <div class="projects-card__button-container">
            {
                projects.map((project, index) => (
                    <a
                        href={`/work/${project.slug}`}
                        class="projects-card__button"
                        data-index={index + 1}
                    >
                        Ver m√°s
                    </a>
                ))
            }
        </div>
    </div>

    <div class="projects-card__slider">
        {
            projects.map((_, index) => (
                <label
                    class="projects-card__dot"
                    for={`project_${index + 1}`}
                    data-index={index + 1}
                />
            ))
        }
    </div>
</div>

<style>
    .card {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        justify-content: space-between;
    }

    .card__input {
        display: none;
    }

    .card__image-area,
    .card__title-area,
    .card__button-area,
    .card__slider {
        position: relative;
        width: 100%;
    }

    .card__image-area {
        min-height: 250px;
        overflow: hidden;
        height: 100%;
    }

    .card__image-container {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .card__image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        border-radius: 1rem;
        opacity: 0;
        transition: opacity 1s ease-in-out;
        z-index: 0;
    }

    .card__title {
        display: none;
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
        color: var(--text-card-color);
    }

    .card__button-area {
        display: flex;
        justify-content: end;
        z-index: 2;
    }

    .card__button {
        display: none;
    }

    .card__button {
        padding: 0.5rem 1rem;
        background-color: var(--bg-button-normal-color);
        color: var(--text-button-normal-color);
        border: none;
        border-radius: 0.5rem;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .card__button:hover {
        background-color: var(--bg-button-normal-hover-color);
    }

    .card__slider {
        display: flex;
        justify-content: center;
        gap: 0.75rem;
        margin-top: 0.5rem;
    }

    .card__slider-button {
        width: 1rem;
        height: 1rem;
        border-radius: 50%;
        background-color: var(--slider-button-color);
        transition:
            background-color 0.3s ease,
            transform 0.3s ease;
        cursor: pointer;
    }

    .card__slider-button:hover {
        background-color: #888;
        transform: scale(1.1);
    }
</style>

<script is:inline>
    const card = document.querySelector(".projects-card");
    const total = parseInt(card.dataset.total, 10);
    let current = 1;
    let intervalId;

    function goToNextSlide() {
        current = (current % total) + 1;
        document.getElementById(`project_${current}`).checked = true;
    }

    function startAutoSlide() {
        clearInterval(intervalId);
        intervalId = setInterval(goToNextSlide, 5000);
    }

    function updateContentVisibility() {
        const index = current;
        document
            .querySelectorAll(".projects-card__image")
            .forEach(
                (img) =>
                    (img.style.opacity =
                        img.dataset.index == index ? "1" : "0"),
            );
        document
            .querySelectorAll(".projects-card__title")
            .forEach(
                (title) =>
                    (title.style.display =
                        title.dataset.index == index ? "block" : "none"),
            );
        document
            .querySelectorAll(".projects-card__button")
            .forEach(
                (btn) =>
                    (btn.style.display =
                        btn.dataset.index == index ? "inline-block" : "none"),
            );
        document
            .querySelectorAll(".projects-card__dot")
            .forEach(
                (dot) =>
                    (dot.style.backgroundColor =
                        dot.dataset.index == index
                            ? "var(--select-slider-button-color)"
                            : "var(--slider-button-color)"),
            );
    }

    document.querySelectorAll(".projects-card__input").forEach((input, idx) => {
        input.addEventListener("change", () => {
            if (input.checked) {
                current = idx + 1;
                updateContentVisibility();
                startAutoSlide();
            }
        });
    });

    updateContentVisibility();
    startAutoSlide();
</script>
